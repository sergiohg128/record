doctype html
html(lang="es")
	head
		title Bodega
		include includes/head
	body
		//Menú Mobile
		include includes/mobile-menu

		//Menú
		header.navbar-fixed
			include includes/menu

		//Cuerpo
		.row.cuerpo
			a.btn-floating.btn-large.waves-effect.red(onclick="agregar()")
				i.material-icons add
			.row.titulo.center
				h4 PROVEEDORES
			.col.s10.offset-s1.tabla
				table.centered.striped
					thead
						th N
						th Nombre
						th Pedidos
						th Nuevo Pedido
						th Editar
						th Eliminar
					tbody
						-for(var i=0;i<5;i++)
							tr
								td #{i}
								td Proveedor #{i}
								td
									a.btn(href="pedidos")
										i.material-icons input
								td
									a.btn.brown(href="pedido")
										i.material-icons add
								td
									a.btn.green(onclick="editar()")
										i.material-icons edit
								td
									a.btn.red(onclick="eliminar()")
										i.material-icons delete